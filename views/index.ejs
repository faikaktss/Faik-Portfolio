<%- include('partials/head') %>
<%- include('partials/header') %>


<!-- Ana Kƒ±sƒ±m -->
<main class="main-content">
    <section class="hero">
        <div class="hero-container">
            <div class="hero-content">
                <h1 class="hero-title">
                    <%= data.hero.greeting %>, <span class="highlight"><%= data.hero.highlightName %></span>
                </h1>
                <p class="hero-subtitle"><%= data.hero.title %></p>
                <div class="hero-description">
                    <% data.hero.description.forEach(paragraph => { %>
                        <p><%= paragraph %></p>
                    <% }); %>
                </div>
                
                <div class="hero-actions">
                    <a href="#skills" class="btn btn-primary">Yeteneklerime Bak</a>
                    <a href="#contact" class="btn btn-secondary">ƒ∞leti≈üime Ge√ß</a>
                </div>
            </div>
        </div>
    </section>




    <!--Hakkƒ±mda Kƒ±smƒ±-->
    <section id="about" class="section about-section">
        <div class="container">
            <h2 class="section-title"><%=data.about.title%></h2>
            <div class="about-content">
                <div class="about-text">
                    <% data.about.paragraphs.forEach(paragraph => { %>
                        <p><%= paragraph %></p>
                    <% }); %>

                    <!--Eƒüitim bilgisi-->
                     <% if (data.about.education && data.about.education.length > 0) { %>
                        <div class="education-info">
                            <h4>Eƒüitim</h4>
                            <% data.about.education.forEach(edu => { %>
                                <div class="education-item">
                                    <strong><%= edu.degree %></strong> - <%= edu.school %> (<%= edu.year %>)
                                    <% if (edu.gpa) { %>
                                        <span class="gpa">GPA: <%= edu.gpa %></span>
                                    <% } %>
                                </div>
                            <% }); %>
                        </div>
                    <% } %>

                    <!--Sertifikalar kƒ±smƒ±-->
                        <% if(data.about.certifications && data.about.certifications.length > 0) { %>
                            <div class="certifications">
                                <h4>Sertifikalar</h4>
                                <ul class="cert-list">
                                    <% data.about.certifications.forEach(cert => { %>
                                        <li><%= cert %></li>
                                    <% }); %>
                                </ul>
                            </div>
                        <% } %>
                </div>


                <div class="about-image">
                    <% if (personal.profileImage) { %>
                        <img src="<%= personal.profileImage %>" alt="<%= personal.fullName %>" class="profile-img">
                    <% } else { %>
                        <div class="image-placeholder">
                            <span>Profil Fotoƒürafƒ±</span>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </section>




    <!-- Yetenekler Kƒ±smƒ± -->
    <section id="skills" class="section skills-section">    
        <h2 class="section-title">Yeteneklerim</h2>
        <div class="skills-grid">
            <!-- Backend Yetenekleri-->
            <div class="skill-category">
                <h3 class="skill-category-title">Backend</h3>
                    <div class="skills-list">
                        <% data.skills.backend.forEach(skill => { %>
                            <div class="skill-item" data-level="<%= skill.level %>">
                                <span class="skill-name"><%= skill.name %></span>
                            </div>
                        <% }); %>
                    </div>
            </div>


            <!-- Veri tabanƒ± yetenekleri -->
                <div class="skill-category">
                    <h3 class="skill-category-title">Veritabanƒ±</h3>
                    <div class="skills-list">
                        <% data.skills.database.forEach(skill => { %>
                            <div class="skill-item" data-level="<%= skill.level %>">
                                <span class="skill-name"><%= skill.name %></span>
                            </div>
                        <% }); %>
                    </div>
                </div>

                <!-- Ara√ßlar -->
                <div class="skill-category">
                    <h3 class="skill-category-title">Ara√ßlar</h3>
                    <div class="skills-list">
                        <% data.skills.tools.forEach(skill => { %>
                            <div class="skill-item" data-level="<%= skill.level %>">
                                <span class="skill-name"><%= skill.name %></span>
                            </div>
                        <% }); %>
                    </div>
                </div>


                 <!-- Frontend -->
                <div class="skill-category">
                    <h3 class="skill-category-title">Frontend</h3>
                    <div class="skills-list">
                        <% data.skills.frontend.forEach(skill => { %>
                            <div class="skill-item" data-level="<%= skill.level %>">  
                                <span class="skill-name"><%= skill.name %></span>
                            </div>
                        <% }); %>
                    </div>
                </div>
        </div>
    </section>   


    <!-- ƒ∞≈ü deneyimi -->
    <% if (data.experience && data.experience.length > 0) { %>
        <section id="experience" class="section experience-section">
            <div class="container">
                <h2 class="section-title">ƒ∞≈ü Deneyimi</h2>
                <div class="experience-timeline">
                    <% data.experience.forEach(job => { %>
                        <div class="experience-item">
                            <div class="experience-header">
                                <h3 class="job-title"><%= job.position %></h3>
                                <div class="company-info">
                                    <span class="company"><%= job.company %></span>
                                    <span class="period"><%= job.period %></span>
                                    <span class="location"><%= job.location %></span>
                                </div>
                            </div>
                            <ul class="job-description">
                                <% job.description.forEach(task => { %>
                                    <li><%= task %></li>
                                <% }); %>
                            </ul>
                        </div>
                    <% }); %>
                </div>
            </div>
        </section>
    <% } %>
    

    <!-- ƒ∞leti≈üim B√∂l√ºm√º-->
        <section id="contact" class="section contact-preview">
        <div class="container">
            <h2 class="section-title">ƒ∞leti≈üime Ge√ß</h2>
            
            <div class="contact-content">
                <div class="contact-info">
                    <!-- Email -->
                    <div class="contact-item">
                        <span class="contact-icon">üì©</span>
                        <div>
                            <strong>Email</strong>
                            <p><a href="mailto:<%= personal.email %>"><%= personal.email %></a></p>
                        </div>
                    </div>
                    
                    <!-- Telefon  -->
                    <% if (personal.phone) { %>
                        <div class="contact-item">
                            <span class="contact-icon">üìû</span>
                            <div>
                                <strong>Telefon</strong>
                                <p><a href="tel:<%= personal.phone %>"><%= personal.phone %></a></p>
                            </div>
                        </div>
                    <% } %>
                    
                    <!-- LinkedIn -->
                    <% if (personal.social.linkedin) { %>
                        <div class="contact-item">
                            <span class="contact-icon">üíº</span>
                            <div>
                                <strong>LinkedIn</strong>
                                <p><a href="<%= personal.social.linkedin %>" target="_blank">Profili G√∂r√ºnt√ºle</a></p>
                            </div>
                        </div>
                    <% } %>
                    
                    <!-- GitHub -->
                    <% if (personal.social.github) { %>
                        <div class="contact-item">
                            <span class="contact-icon">üíª</span>
                            <div>
                                <strong>GitHub</strong>
                                <p><a href="<%= personal.social.github %>" target="_blank">Projeleri G√∂r√ºnt√ºle</a></p>
                            </div>
                        </div>
                    <% } %>
                    
                    <!-- Konum -->
                    <div class="contact-item">
                        <span class="contact-icon">üìç</span>
                        <div>
                            <strong>Konum</strong>
                            <p><%= personal.location %></p>
                        </div>
                    </div>
                </div>
                
                <div class="contact-cta">
                    <% if (personal.resumeUrl) { %>
                        <a href="<%=personal.resumeUrl %>" class="btn btn-outline" target="_blank">CV ƒ∞ndir</a>
                    <% } %>
                        <a href="mailto:<%= personal.email %>" class="btn btn-primary">Email G√∂nder</a>
                </div>
            </div>
        </div>
    </section>

</main>

<%- include('partials/footer') %>